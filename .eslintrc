{
  "env": {
    "node": true,
    "es6": true,
    "jquery": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "impliedStrict": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["promise","prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "warn",
    "dot-location": ["off"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "no-continue": "off",
    "no-await-in-loop": "warn"
  }
}
